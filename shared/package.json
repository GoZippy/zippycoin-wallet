{
  "name": "@zippycoin/shared",
  "version": "1.0.0",
  "description": "Shared business logic and utilities for ZippyCoin wallet applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@noble/secp256k1": "^2.0.0",
    "@noble/hashes": "^1.3.0",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "crypto-js": "^4.1.1",
    "axios": "^1.5.0",
    "ws": "^8.13.0",
    "zod": "^3.22.0",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/ws": "^8.5.5",
    "@types/jest": "^29.5.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/test/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
} 