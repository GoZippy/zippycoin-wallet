{
  "name": "zippycoin-wallet",
  "version": "1.0.0",
  "description": "Cross-platform ZippyCoin wallet application for desktop, iOS, and Android",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "mobile",
    "desktop",
    "shared"
  ],
  "scripts": {
    "postinstall": "npm run setup:all",
    "setup:all": "npm run setup:shared && npm run setup:mobile && npm run setup:desktop",
    "setup:shared": "cd shared && npm install",
    "setup:mobile": "cd mobile && npm install",
    "setup:desktop": "cd desktop && npm install",
    "build:all": "npm run build:shared && npm run build:mobile && npm run build:desktop",
    "build:shared": "cd shared && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:desktop": "cd desktop && npm run build",
    "dev:mobile": "cd mobile && npm start",
    "dev:desktop": "cd desktop && npm run dev",
    "ios": "cd mobile && npx react-native run-ios",
    "android": "cd mobile && npx react-native run-android",
    "test": "npm run test:shared && npm run test:mobile && npm run test:desktop",
    "test:shared": "cd shared && npm test",
    "test:mobile": "cd mobile && npm test",
    "test:desktop": "cd desktop && npm test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "clean": "npm run clean:all && npm run clean:node_modules",
    "clean:all": "cd mobile && npm run clean; cd ../desktop && npm run clean; cd ../shared && npm run clean",
    "clean:node_modules": "rm -rf node_modules mobile/node_modules desktop/node_modules shared/node_modules",
    "security:audit": "npm audit --recursive",
    "prebuild": "npm run lint && npm run test"
  },
  "keywords": [
    "zippycoin",
    "cryptocurrency",
    "wallet",
    "blockchain",
    "quantum-resistant",
    "react-native",
    "electron",
    "cross-platform"
  ],
  "author": "ZippyFoundation Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zippyfoundation/zippycoin-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/zippyfoundation/zippycoin-wallet/issues"
  },
  "homepage": "https://github.com/zippyfoundation/zippycoin-wallet#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-native": "^4.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
