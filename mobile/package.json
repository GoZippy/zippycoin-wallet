    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "metro-react-native-babel-preset": "0.76.5",
    "patch-package": "^8.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "4.9.5"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
